%h1 All Movies
 
%table#movies
  %thead
    %tr
      %th Movie
      %th Title
      %th Description
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    - @movies.each_with_index do |movie,i|
      %tr
        %td= i + 1
        %td= movie.title
        %td= movie.description
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

%p= link_to 'Add new movie',new_movie_path

