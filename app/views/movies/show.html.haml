%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on: 
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description
%p#description= @movie.description

%p= button_to 'Edit info', edit_movie_path(@movie), :method => :get

%p= link_to 'Delete', movie_path(@movie), :method => :delete

%p= link_to 'Back to movies list', movies_path, :method => :get